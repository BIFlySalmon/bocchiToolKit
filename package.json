{
  "name": "bocchitoolkit",
  "version": "1.0.0",
  "description": "波奇工具箱  by:BiliBili-逆飞的三文鱼",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \\\"Error: no test specified\\\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BIFlySalmon/FlySalmonToolKit.git"
  },
  "keywords": [
    "ToolKit"
  ],
  "author": "逆飞的三文鱼",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BIFlySalmon/FlySalmonToolKit/issues"
  },
  "homepage": "https://github.com/BIFlySalmon/FlySalmonToolKit#readme",
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "koffi": "^2.9.2",
    "electron-store": "^7.0.3"
  },
  "build": {
    "productName": "波奇工具箱",
    "appId": "com.bocchitoolkit",
    "copyright": "逆飞的三文鱼",
    "files": [
      "**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [],
    "directories": {
      "output": "electron-build"
    },
    "asar": true,
    "extraResources": {
      "from": "./resources/dll/",
      "to": "dll"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "include": "installer.nsh",
      "installerIcon": "./icon256.ico",
      "uninstallerIcon": "./icon256.ico",
      "installerHeaderIcon": "./icon256.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "波奇工具箱",
      "language": "2052"
    },
    "win": {
      "icon": "./icon256.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
